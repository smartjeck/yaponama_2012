<%- model_class = Email -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:from_addrs) %></th>
      <th><%= model_class.human_attribute_name(:return_path) %></th>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:in_reply_to) %></th>
      <th><%= model_class.human_attribute_name(:to_addrs) %></th>
      <th><%= model_class.human_attribute_name(:html_part) %></th>
      <th><%= model_class.human_attribute_name(:text_part) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:cc_addrs) %></th>
      <th><%= model_class.human_attribute_name(:bcc_addrs) %></th>
      <th><%= model_class.human_attribute_name(:bcc) %></th>
      <th><%= model_class.human_attribute_name(:cc) %></th>
      <th><%= model_class.human_attribute_name(:resent_bcc) %></th>
      <th><%= model_class.human_attribute_name(:resent_cc) %></th>
      <th><%= model_class.human_attribute_name(:is_multipart) %></th>
      <th><%= model_class.human_attribute_name(:parts_length) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:message_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:content_types) %></th>
      <th><%= model_class.human_attribute_name(:classes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= link_to email.id, email_path(email) %></td>
        <td><%= email.from_addrs %></td>
        <td><%= email.return_path %></td>
        <td><%= email.from %></td>
        <td><%= email.subject %></td>
        <td><%= email.in_reply_to %></td>
        <td><%= email.to_addrs %></td>
        <td><%= email.html_part %></td>
        <td><%= email.text_part %></td>
        <td><%= email.user_id %></td>
        <td><%= email.to %></td>
        <td><%= email.body %></td>
        <td><%= email.cc_addrs %></td>
        <td><%= email.bcc_addrs %></td>
        <td><%= email.bcc %></td>
        <td><%= email.cc %></td>
        <td><%= email.resent_bcc %></td>
        <td><%= email.resent_cc %></td>
        <td><%= email.is_multipart %></td>
        <td><%= email.parts_length %></td>
        <td><%= email.date %></td>
        <td><%= email.message_id %></td>
        <td><%= email.name %></td>
        <td><%= email.content_types %></td>
        <td><%= email.classes %></td>
        <td><%=l email.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_email_path(email), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      email_path(email),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_email_path,
            :class => 'btn btn-primary' %>
