<%= simple_form_for [:admin, @postal_address], :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.association :user %>
  <%= f.input :company %>
  <%= f.input :postcode %>
  <%= f.input :region %>
  <%= f.input :city %>
  <%= f.input :street %>
  <%= f.input :house %>
  <%= f.input :room %>
  <%= f.input :notes, :input_html => {:rows => 10} %>
  <%= f.input :created_at, :disabled => true %>
  <%= f.input :updated_at, :disabled => true %>
  <%= f.input :invisible %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_postal_addresses_path, :class => 'btn' %>
  </div>
<% end %>
