<%- model_class = DeliveryCategory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:notes_invisible) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @delivery_categories.each do |delivery_category| %>
      <tr>
        <td><%= link_to delivery_category.id, admin_delivery_category_path(delivery_category) %></td>
        <td><%= delivery_category.name %></td>
        <td><%= delivery_category.notes %></td>
        <td><%= delivery_category.notes_invisible %></td>
        <td><%= delivery_category.image %></td>
        <td><%=l delivery_category.created_at, :format => :short %></td>
        <td><%=l delivery_category.updated_at, :format => :short %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_delivery_category_path(delivery_category), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_delivery_category_path(delivery_category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_delivery_category_path,
            :class => 'btn btn-primary' %>
