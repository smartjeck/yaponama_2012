= simple_form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f|

  ul.nav.nav-tabs
    = content_tag(:li, link_to("Главная", edit_admin_user_path(@user.id || -1, :tab => :users)), :class => ((@tab == 'users') ? 'active' : '') )
    = content_tag(:li, link_to("Имя", edit_admin_user_path(@user.id || -1, :tab => :names)), :class => ((@tab == 'names') ? 'active' : '') )
    = content_tag(:li, link_to("Телефон", edit_admin_user_path(@user.id || -1, :tab => :phones)), :class => ((@tab == 'phones') ? 'active' : '') )
    = content_tag(:li, link_to("E-mail", edit_admin_user_path(@user.id || -1, :tab => :email_addresses)), :class => ((@tab == 'email_addresses') ? 'active' : '') )
    = content_tag(:li, link_to("Адрес", edit_admin_user_path(@user.id || -1, :tab => :postal_addresses)), :class => ((@tab == 'postal_addresses') ? 'active' : '') )
    = content_tag(:li, link_to("Авто", edit_admin_user_path(@user.id || -1, :tab => :cars)), :class => ((@tab == 'cars') ? 'active' : '') )
    = content_tag(:li, link_to("Запросы", edit_admin_user_path(@user.id || -1, :tab => :requests)), :class => ((@tab == 'requests') ? 'active' : '') )
    = content_tag(:li, link_to("Корзина", edit_admin_user_path(@user.id || -1, :tab => :products_incart)), :class => ((@tab == 'products_incart') ? 'active' : '') )
    = content_tag(:li, link_to("Заказы", edit_admin_user_path(@user.id || -1, :tab => :orders)), :class => ((@tab == 'orders') ? 'active' : '') )
   
  .tab-content

    = render :partial => @tab, :locals => { :f => f }

  hr

  .form-actions
    = f.button :submit, :class => 'btn-primary' 
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_users_path, :class => 'btn' 
    - unless f.object.new_record? 
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(f.object), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' 
