<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cars) %></th>
      <th><%= model_class.human_attribute_name(:names) %></th>
      <th><%= model_class.human_attribute_name(:phones) %></th>
      <th><%= model_class.human_attribute_name(:emails) %></th>
      <th><%= model_class.human_attribute_name(:time_zone) %></th>
      <th><%= model_class.human_attribute_name(:invisible) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%= model_class.human_attribute_name(:ping) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, admin_user_path(user) %></td>
        <td><%= user.cars.collect(&:to_label).join(', ') %></td>
        <td><%= user.names.collect(&:to_label).join(', ') %></td>
        <td><%= user.phones.collect(&:to_label).join(', ') %></td>
        <td><%= user.email_addresses.collect(&:to_label).join(', ') %></td>
        <td><%= user.time_zone.to_label if user.time_zone.present? %></td>
        <td><%= user.invisible %></td>
        <td><%=l user.created_at %></td>
        <td><%=l user.updated_at %></td>
        <td><%= user.ping.updated_at %> </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_user_path,
            :class => 'btn btn-primary' %>
