<%= simple_form_for @phone, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :phone %>
  <%= f.input :can_receive_sms, :as => :radio_buttons, :required => true %>
  <%= f.input :notes %>
  <%= f.input :confirmed_by_human %>
  <%= f.input :confirmed_by_robot, :disabled => true %>
  <%= f.input :invisible %>
  <%= f.association :user %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                phones_path, :class => 'btn' %>
  </div>

<% end %>
