<%= simple_form_for [:admin, @phone], :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.association :user %>
  <%= f.input :phone %>
  <%= f.input :can_receive_sms, :as => :radio_buttons, :required => true %>
  <%= f.input :notes %>
  <%= f.input :confirmed_by_human %>
  <%= f.input :human_confirmation_datetime %>
  <%= f.input :confirmed_by_robot, :disabled => true %>
  <%= f.input :robot_confirmation_datetime, :disabled => true %>
  <%= f.input :created_at, :disabled => true %>
  <%= f.input :updated_at, :disabled => true %>
  <%= f.input :invisible %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_phones_path, :class => 'btn' %>
  </div>

<% end %>
