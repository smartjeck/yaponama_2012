<%- model_class = Phone -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @phone.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @phone.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:confirmed_by_human) %>:</strong></dt>
  <dd><%= @phone.confirmed_by_human %></dd>
  <dt><strong><%= model_class.human_attribute_name(:confirmed_by_robot) %>:</strong></dt>
  <dd><%= @phone.confirmed_by_robot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:can_receive_sms) %>:</strong></dt>
  <dd><%= @phone.can_receive_sms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @phone.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_phones_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_phone_path(@phone), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_phone_path(@phone),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
