<%- model_class = Admin::Cart -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:catalog_number) %>:</strong></dt>
  <dd><%= @admin_cart.catalog_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong></dt>
  <dd><%= @admin_cart.manufacturer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @admin_cart.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probability) %>:</strong></dt>
  <dd><%= @admin_cart.probability %></dd>
  <dt><strong><%= model_class.human_attribute_name(:min_days) %>:</strong></dt>
  <dd><%= @admin_cart.min_days %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_days) %>:</strong></dt>
  <dd><%= @admin_cart.max_days %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @admin_cart.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_carts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_cart_path(@admin_cart), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_cart_path(@admin_cart),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
