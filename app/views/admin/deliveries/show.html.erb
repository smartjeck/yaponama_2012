<%- model_class = Delivery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @delivery.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @delivery.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:available) %>:</strong></dt>
  <dd><%= @delivery.available %></dd>
  <dt><strong><%= model_class.human_attribute_name(:full_prepayment_required) %>:</strong></dt>
  <dd><%= @delivery.full_prepayment_required %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_required) %>:</strong></dt>
  <dd><%= @delivery.name_required %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_address_required) %>:</strong></dt>
  <dd><%= @delivery.postal_address_required %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_cost_required) %>:</strong></dt>
  <dd><%= @delivery.delivery_cost_required %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sequence) %>:</strong></dt>
  <dd><%= @delivery.sequence %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes_invisible) %>:</strong></dt>
  <dd><%= @delivery.notes_invisible %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_deliveries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_delivery_path(@delivery), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_delivery_path(@delivery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
