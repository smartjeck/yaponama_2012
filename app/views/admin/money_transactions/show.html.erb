<%- model_class = MoneyTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:left_account_id) %>:</strong></dt>
  <dd><%= @transaction.left_account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:right_account_id) %>:</strong></dt>
  <dd><%= @transaction.right_account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:left_real) %>:</strong></dt>
  <dd><%= @transaction.left_real%></dd>
  <dt><strong><%= model_class.human_attribute_name(:right_real) %>:</strong></dt>
  <dd><%= @transaction.right_real%></dd>
  <dt><strong><%= model_class.human_attribute_name(:left_money) %>:</strong></dt>
  <dd><%= @transaction.left_money%></dd>
  <dt><strong><%= model_class.human_attribute_name(:right_money) %>:</strong></dt>
  <dd><%= @transaction.right_money%></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_transactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_transaction_path(@transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_transaction_path(@transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
