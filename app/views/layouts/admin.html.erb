    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <!-- 
  <link href="images/favicon.ico" rel="shortcut icon">
  <link href="images/apple-touch-icon.png" rel="apple-touch-icon">
  <link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
  <link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
  --> 

</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Yaponama2012</a>
        <div class="container-fluid nav-collapse">
          <ul class="nav">
            <li><%= link_to "Управление", "/path1"  %></li>
            <li><%= link_to "Интерактив", "/path2"  %></li>
            <li><%= link_to "Link3", "/path3"  %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>


  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span3">

        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <li class="nav-header">клиенты</li>
            <li><%= link_to "клиенты", admin_users_path  %></li>
            <li><%= link_to "телефоны", admin_phones_path %></li>
            <li><%= link_to "адреса доставки", admin_postal_addresses_path  %></li>
            <li><%= link_to "e-mail адреса", admin_email_addresses_path  %></li>
            <li><%= link_to "письма", admin_emails_path  %></li>
            <li><%= link_to "имена", admin_names_path  %></li>
            <li><%= link_to "автомобили", admin_cars_path  %></li>
            <li><%= link_to "запросы", admin_requests_path  %></li>
          </ul>
        </div><!--/.well -->

        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <li class="nav-header">Настройки</li>
            <li><%= link_to "часовые пояса", admin_time_zones_path  %></li>
          </ul>
        </div><!--/.well -->

      </div><!--/span-->
      <div class="span9">
        <%= yield %>
      </div>
    </div><!--/row-->

    <footer>
      <p>&copy; Company 2012</p>
    </footer>

  </div> <!-- /container -->

  </body>
</html>
